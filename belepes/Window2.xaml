<Window x:Class="belepes.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:belepes"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            

        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Új felhasználói adatok" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Új felhalsználó név:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="textbox2" Grid.Column="1" Grid.Row="1"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Jelszó" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <PasswordBox x:Name="password2" Grid.Column="1" Grid.Row="2"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Button x:Name="button" Content="Belépés" Grid.ColumnSpan="2"  Height="51" Margin="0,0,0,0" Grid.Row="3"  Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="button_Click" />
    </Grid>
</Window>
