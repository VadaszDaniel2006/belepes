<Window x:Class="belepes.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:belepes"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Felhalsználói belépés" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Felhalsználó név:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="textbox"  Grid.Column="1" Grid.Row="1"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Jelszó" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <PasswordBox Name="password" Grid.Column="1" Grid.Row="2"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Button x:Name="button" Content="Belépés" Grid.ColumnSpan="2"  Height="51" Margin="0,0,0,0" Grid.Row="3"  Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Click="button_Click" />
        <Button x:Name="button1" Content="Elfelejtett jelszó" Grid.ColumnSpan="2"  Height="51" Margin="0,10,0,0" Grid.Row="4"  Width="200"  VerticalAlignment="Top" Click="button1_Click" />

    </Grid>
</Window>
