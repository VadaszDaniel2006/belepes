<Window x:Class="belepes.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:belepes"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>


        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Tanuló adatai" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Id:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="texbox1" Grid.Column="1" Grid.Row="1"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Név:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="textbox2" Grid.Column="1" Grid.Row="2"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Label Grid.Column="0" Grid.Row="3" Content="Átlag:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox x:Name="textbox3"  Grid.Column="1" Grid.Row="3"  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="40"/>
        <Button x:Name="button1"  Content="Hozzáadás"  Height="51" Grid.Row="4"  Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Click="button_Click" />
        <Button  Content="Táblázat"  Height="51" Grid.Column="2" Grid.Row="4"  Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Click="button_Click" />
    </Grid>
</Window>
